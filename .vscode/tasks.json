{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++11",
        "-I.", // Include current directory for headers
        "main.cpp",
        "sqlite3.c", // Ensure sqlite3.c is included
        "-o",
        "main.exe" // Output executable
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
